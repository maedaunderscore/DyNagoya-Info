<?xml version="1.0" encoding="utf8"?>
<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
  <servlet>
    <servlet-name>WebDav</servlet-name>
    <servlet-class>net.sf.webdav.WebdavServlet</servlet-class>
    <init-param>
      <param-name>ResourceHandlerImplementation</param-name>
      <param-value>
	net.sf.webdav.LocalFileSystemStore
      </param-value>
      <description>
	name of the class that implements
	net.sf.webdav.WebdavStore
      </description>
    </init-param>
    <init-param>
      <param-name>rootpath</param-name>
      <param-value>webdav</param-value>
      <description>
	place where to store the webdavcontent on the filesystem
      </description>
    </init-param>
    <init-param>
      <param-name>insteadOf404</param-name>
      <param-value></param-value>
      <description>
	404
      </description>
    </init-param>
    <init-param>
      <param-name>maxUploadSize</param-name>
      <param-value>2000000000</param-value>
      <!-- set to 2G -->
    </init-param>
    <init-param>
      <param-name>dftIndexFile</param-name>
      <param-value>index.html</param-value>
      <description>
	use index.html
      </description>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>WebDav</servlet-name>
    <url-pattern>/*</url-pattern>
  </servlet-mapping>

  <filter>
    <filter-name>Proxy</filter-name>
    <filter-class>info.dynagoya.Proxy</filter-class>
    <init-param>
      <param-name>maxUploadSize</param-name>
      <param-value>2000000000</param-value>
      <!-- set to 2G -->
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>Proxy</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
</web-app>

